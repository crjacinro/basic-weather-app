<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/home_card_inner_margin">

    <ImageView
            android:id="@+id/featured_card_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            tools:background="@mipmap/night_bg"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/home_card_margin">

        <TextView
                android:id="@+id/heading"
                style="@style/MaterialLightHeadlineH1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_card_margin"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center"
                android:textAllCaps="true"
                tools:text="Today, April 10, 2019"/>

        <TextView
                android:id="@+id/temperature"
                style="@style/MaterialLightHeadlineH1Big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_card_margin"
                android:layout_below="@id/heading"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center"
                android:textAllCaps="true"
                tools:text="35.6 \u2103"/>

        <TextView
                android:id="@+id/description"
                style="@style/MaterialLightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_card_margin"
                android:layout_below="@id/temperature"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center"
                android:textAllCaps="true"
                tools:text="Overcast Clouds"/>

    </RelativeLayout>

</RelativeLayout>